@model SalesTaxAssignment.Services.Receipt
@{
    ViewData["Title"] = "Receipt";
}

<h2 class="mb-4">Receipt Summary</h2>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <ul class="list-group list-group-flush">
            @foreach (var line in Model.Lines)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    @line.Description
                    <span class="fw-bold">@line.PriceWithTax.ToString("0.00")</span>
                </li>
            }
        </ul>
        <button class="btn btn-outline-primary mt-3" onclick="window.print()">Print Receipt</button>
    </div>
    <div class="card-footer text-end">
        <p class="mb-1"><strong>Sales Taxes:</strong> @Model.SalesTaxes.ToString("0.00")</p>
        <p class="mb-0"><strong>Total:</strong> @Model.Total.ToString("0.00")</p>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary">Back to Input Selector</a>