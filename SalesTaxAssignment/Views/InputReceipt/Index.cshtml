@{
    ViewData["Title"] = "Select Basket";
}

<h2 class="mb-4">Choose a Basket to View Receipt</h2>

<form asp-action="Receipt" method="get" class="card p-4 shadow-sm">
    <div class="form-group">
        <label for="BasketKey">Basket</label>
        <select asp-items="ViewBag.Inputs" name="BasketKey" class="form-control"></select>
    </div>
    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary">Create Receipt</button>

        <div class="btn-group">
            <a asp-controller="Products" asp-action="Index" class="btn btn-outline-secondary">View/Create Basket Items</a>
            <a asp-controller="Input" asp-action="CreateInput" class="btn btn-outline-success">Create New Input</a>
        </div>
    </div>
</form>