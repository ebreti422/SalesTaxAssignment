@using SalesTaxAssignment.Models
@using SalesTaxAssignment.Services
@model Receipt

<h2>Receipt</h2>
<table class="table">
    <thead>
        <tr><th>Description</th><th>Price</th></tr>
    </thead>
    <tbody>
        @foreach (var line in Model.Lines)
        {
            <tr>
                <td>@line.Description</td>
                <td>@line.PriceWithTax.ToString("0.00")</td>
            </tr>
        }
    </tbody>
</table>

<p><strong>Sales Taxes:</strong> @Model.SalesTaxes.ToString("0.00")</p>
<p><strong>Total:</strong> @Model.Total.ToString("0.00")</p>
