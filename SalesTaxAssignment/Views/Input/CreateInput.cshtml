@model SalesTaxAssignment.Models.CreateInputViewModel

@{
    ViewData["Title"] = "Create New Input";
}

<h2 class="mb-4">Create New Input</h2>

<form asp-action="CreateInput" method="post" class="card p-4 shadow-sm">
    <div class="mb-3">
        <label asp-for="BasketKey" class="form-label">Input Name (Basket Key)</label>
        <input asp-for="BasketKey" class="form-control" placeholder="e.g. EvanBasket" />
        <span asp-validation-for="BasketKey" class="text-danger"></span>
    </div>

    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Products.Count; i++)
            {
                <tr>
                    <td>@Model.Products[i].Name</td>
                    <td>@Model.Products[i].Price.ToString("0.00")</td>
                    <td>
                        <input asp-for="Products[@i].Quantity" class="form-control" min="0" />
                        <input type="hidden" asp-for="Products[@i].ProductId" />
                        <input type="hidden" asp-for="Products[@i].Name" />
                        <input type="hidden" asp-for="Products[@i].Price" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-success">Create Input</button>
    <a asp-action="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
</form>